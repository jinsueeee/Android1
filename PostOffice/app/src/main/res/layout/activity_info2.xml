<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_info"
        android:layout_margin="10dp"
        android:textSize="32dp"
        android:textStyle="bold"
        android:text="30312이진수"
        android:gravity="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="440dp"
        android:id="@+id/img_info"
        android:src="@drawable/info1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_info"
        android:scaleType="centerInside"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_info"
        android:layout_marginVertical="10dp"
        android:layout_below="@id/img_info"
        android:text="ndqnwdnkqnwldnkqwnldbqwkbdlkwqb"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_info"
        android:id="@+id/btn_info_back"
        android:text="뒤로"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>